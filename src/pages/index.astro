---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<section class="hero">
		<p class="hero-kicker">PORTFOLIO</p>
		<h1 class="hero-title">Hello, I'm Shane Boulos</h1>
		<p class="hero-body">
			This is the very first draft of my new portfolio.
		</p>
	</section>

	<style>
		.hero {
			width: 100%;
			max-width: 640px;
			margin: 3.5rem auto 0;
			padding: 3rem 2.5rem 3.25rem;
			border-radius: 1.25rem;
			border: 1px solid rgba(148, 163, 184, 0.35);
			background: #464646;
			box-shadow: 0 18px 60px rgba(16, 20, 17, 0.9);
			backdrop-filter: blur(18px);

			opacity: 0;
			transform: translateY(16px) scale(0.985);
			filter: blur(4px);
			animation: hero-in calc(var(--anim-slow) * 1.75)
				var(--ease-out-soft) forwards;
		}

		.hero-kicker {
			font-size: 0.8rem;
			letter-spacing: 0.22em;
			text-transform: uppercase;
			color: rgba(148, 163, 184, 0.9);
			margin: 0 0 1.75rem;

			opacity: 0;
			transform: translateY(6px);
			animation: hero-kicker-in calc(var(--anim-med) * 1.75)
				var(--ease-out-soft) forwards;
			animation-delay: 80ms;
		}

		.hero-title {
			font-size: clamp(2.25rem, 3vw + 1rem, 3rem);
			line-height: 1.1;
			letter-spacing: -0.03em;
			margin: 0 0 1rem;

			opacity: 0;
			transform: translateY(10px);
			animation: hero-title-in calc(var(--anim-med) * 1.75)
				var(--ease-out-snappy) forwards;
			animation-delay: 160ms;
		}

		.hero-body {
			margin: 0;
			max-width: 34rem;
			font-size: 0.98rem;
			line-height: 1.7;
			color: rgba(226, 232, 240, 0.86);

			opacity: 0;
			transform: translateY(12px);
			animation: hero-body-in calc(var(--anim-med) * 1.75)
				var(--ease-out-soft) forwards;
			animation-delay: 260ms;
		}

		/* Keyframes */

		@keyframes hero-in {
			from {
				opacity: 0;
				transform: translateY(24px) scale(0.97);
				filter: blur(6px);
			}
			to {
				opacity: 1;
				transform: translateY(0) scale(1);
				filter: blur(0);
			}
		}

		@keyframes hero-kicker-in {
			from {
				opacity: 0;
				transform: translateY(10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@keyframes hero-title-in {
			from {
				opacity: 0;
				transform: translateY(14px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@keyframes hero-body-in {
			from {
				opacity: 0;
				transform: translateY(14px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@media (max-width: 600px) {
			.hero {
				margin-top: 2.5rem;
				padding: 2.25rem 1.75rem 2.75rem;
				border-radius: 1rem;
			}

			.hero-title {
				font-size: 2.1rem;
			}
		}
	</style>
</Layout>
