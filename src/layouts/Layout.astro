---
const {
    title = "Shane Boulos — Portfolio",
    description = "Portfolio of Shane Boulos, blending CX, automation, and design.",
} = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta name="description" content={description} />
    </head>

    <body>
        <div class="page">
            <header class="site-header">
                <div class="site-header-inner">
                    <span class="site-logo">SB</span>
                    <span class="site-title">Shane Boulos</span>
                </div>
            </header>

            <main class="site-main">
                <slot />
            </main>

            <footer class="site-footer">
                <div class="site-footer-inner">
                    <span>© {new Date().getFullYear()} Shane Boulos.</span>
                    <span>CX, automation & design.</span>
                </div>
            </footer>
        </div>
    </body>
</html>

<style>
    :global(:root) {
        --anim-fast: 180ms;
        --anim-med: 260ms;
        --anim-slow: 420ms;

        --ease-out-soft: cubic-bezier(0.18, 0.89, 0.32, 1.12);
        --ease-out-snappy: cubic-bezier(0.16, 1, 0.3, 1);
    }

    :global(body) {
        margin: 0;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            sans-serif;

        background: radial-gradient(
                140% 180% at 20% 0%,
                rgba(65, 240, 228, 0.343),
                transparent 30%
            ),
            radial-gradient(
                150% 190% at 80% 90%,
                rgba(102, 41, 0, 0.52),
                transparent 30%
            ),
            #343434;
        color: #f5f5f5;
    }

    .page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative;
        z-index: 0;
    }

    .page::before {
        content: "";
        position: fixed;
        inset: 0;
        pointer-events: none;
        background-image: url("/noise.svg");
        background-repeat: repeat;
        background-size: 320px 320px;
        opacity: 0.53;
        mix-blend-mode: overlay;
        z-index: 1;
    }

    .site-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        backdrop-filter: blur(12px);
        background: linear-gradient(
            to bottom,
            rgba(20, 23, 20, 0.75),
            rgba(18, 20, 17, 0.667)
        );
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .site-header-inner {
        max-width: 960px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .site-logo {
        width: 32px;
        height: 32px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        font-weight: 400;
        letter-spacing: 0.04em;
        background: radial-gradient(circle at 10% 5%, #007a98, #5c2e0c);
        box-shadow: 0 0 20px rgba(200, 76, 42, 0.3);
    }

    .site-title {
        font-size: 0.95rem;
        font-weight: 500;
        opacity: 0.9;
    }

    .site-main {
        flex: 1;
        display: flex;
        justify-content: center;
        padding: 2rem 1.5rem 3rem;
    }

    .site-footer {
        padding: 1.5rem 1.5rem 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
        background: rgba(22, 24, 22, 0.75);
        color: rgba(255, 255, 255, 0.72);
        font-size: 0.8rem;
    }

    .site-footer-inner {
        max-width: 960px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: space-between;
        opacity: 0.85;
    }

    @media (max-width: 600px) {
        .site-header-inner,
        .site-footer-inner {
            max-width: 100%;
        }

        .site-main {
            padding: 1.5rem 1.25rem 2.5rem;
        }
    }
</style>
